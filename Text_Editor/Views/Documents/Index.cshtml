@model IEnumerable<Text_Editor.Models.Document>

@{
    ViewData["Title"] = "Index";
}

<h1 class="d-flex justify-content-center mb-4">Create or edit a document</h1>

<div class="d-flex justify-content-center align-items-center" style="width: 150px; height: 200px; background-color: lightblue; font-size: 100px">
    <a asp-action="Create" style="text-decoration: none; color: black" class="d-flex justify-content-center align-items-center">+</a>
</div>
<span class="d-flex justify-content-start mt-2" style="font-weight: bold">Blank Document</span>

<hr />

<div class="row">
@foreach (var item in Model)
{
    <div class="col-2">
    <div class="d-flex justify-content-center align-items-center mb-2" style="width: 150px; height: 200px; background-color: lightgray; font-size: 100px">
        <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none; color: black" class="d-flex justify-content-center align-items-center">📄</a>
    </div>
    <span style="font-weight: bold">@item.Title</span>
    </div>
}
</div>
